{
  "name": "Python (Docker)",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "forwardPorts": [8050, 8888],
  "postCreateCommand": "pip install -e . || true"
}
